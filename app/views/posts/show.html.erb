<div class="expanded_post">
  <h2 class="post_title"><%=h @post.title %></h2>
  <h3 class="post_info">by <%=h @author.username %> @ <%=h @post.created_at %></h3>

  <p class="post_body">
  <%=h @post.content %>
  </p>

  <br />
  <br />
  <h3 class="post_topics">Filed Under: <%= @post.topics.map { |t| t.name }.join(", ") %></h3>
  <br />
  <br />
  <%= link_to 'Back to Posts', posts_path %>
</div>
