<div class="link_listing">
  <h2 class="link_title"><%= link_to link.title, link.url %></h2>
  <% if current_user then %>
    <span>&nbsp;&nbsp;&nbsp;<%= link_to "Edit", edit_link_path(link) %> | <%= link_to 'Delete', link, :confirm => 'Are you sure?', :method => :delete %></span>
  <% end %>
  <h3 class="post_info">by <%=h link_author(link.user_id) %> at <%=h link.created_at %></h3>
  <p class="post_body">
    <%= link.body %>
    <br />
    <br />
    Link -- <%= link_to link.url, link.url %>
  </p>
</div>
